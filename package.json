{
  "name": "@thewebforge/usewordpress",
  "version": "0.1.3",
  "description": "A collection of WordPress React hooks \u2013\u00a0from The Web Forge",
  "author": "C\u00e9dric Bontems",
  "license": "MIT",
  "type": "module",
  "module": "index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/thewebforge/usewordpress"
  },
  "keywords": [
    "hooks",
    "react",
    "wordpress"
  ],
  "bugs": {
    "url": "https://github.com/thewebforge/usewordpress/issues"
  },
  "homepage": "https://github.com/thewebforge/usewordpress#readme",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "bump": "cz bump",
    "dev": "rm -rf dist && tsc --watch",
    "publish": "npm publish --access=public",
    "release": "bun run build && bun run bump && bun run publish"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@wordpress/element": "^5.26.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "@wordpress/element": "^5.26.0"
  }
}
